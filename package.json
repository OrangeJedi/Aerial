{
  "name": "aerial",
  "version": "1.2.1",
  "videoJSONVersion": "1.15.0",
  "description": "Apple TV screen saver for Windows",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrangeJedi/Aerial.git"
  },
  "author": "OrangeJedi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OrangeJedi/Aerial/issues"
  },
  "homepage": "https://github.com/OrangeJedi/Aerial#readme",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "auto-launch": "*",
    "electron-store": "*",
    "font-list-universal": "*",
    "json-beautify": "*",
    "request": "*",
    "suncalc": "*"
  },
  "build": {
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "perMachine": false
    },
    "portable": {
      "artifactName": "aerial.exe",
      "useZip": true
    },
    "files": [
      "!documentation/*",
      "!images/*"
    ],
    "icon": "icon.ico",
    "productName": "Aerial"
  }
}
